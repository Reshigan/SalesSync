# SalesSync Production Environment Template
# Copy this file to .env.production and update the values

# Production Environment Configuration
NODE_ENV=production
PORT=12000
HOST=0.0.0.0

# API Configuration - Production Domain
NEXT_PUBLIC_API_URL=https://ss.gonxt.tech/api
NEXT_PUBLIC_SOCKET_URL=https://ss.gonxt.tech
NEXT_PUBLIC_TENANT_CODE=DEMO

# Application Configuration
NEXT_PUBLIC_APP_NAME="SalesSync"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_ENVIRONMENT="production"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_ENABLE_PWA=true

# Performance Configuration
NEXT_TELEMETRY_DISABLED=1
NEXT_FONT_GOOGLE_DISPLAY=swap
NEXT_IMAGES_OPTIMIZE=true
NEXT_BUNDLE_ANALYZE=false

# Security Configuration
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_SECURE_COOKIES=true

# Monitoring Configuration (Optional)
NEXT_PUBLIC_SENTRY_DSN=""
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=""

# Backend Environment Variables (for reference)
# These should be set in backend/.env.production
# JWT_SECRET=<generate-with-openssl-rand-hex-32>
# JWT_REFRESH_SECRET=<generate-with-openssl-rand-hex-32>
# DATABASE_URL=file:./database/salessync_production.db
# CORS_ORIGIN=https://ss.gonxt.tech