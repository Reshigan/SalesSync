# SalesSync Production Environment Configuration

# Application Settings
NODE_ENV=production
APP_NAME=SalesSync
APP_VERSION=1.0.0

# Server Configuration
BACKEND_PORT=12001
FRONTEND_PORT=12000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://salessync_user:SalesSync2024!Secure@localhost:5432/salessync
DB_HOST=localhost
DB_PORT=5432
DB_NAME=salessync
DB_USER=salessync_user
DB_PASSWORD=SalesSync2024!Secure

# Security Configuration
JWT_SECRET=SalesSync2024!JWT!Secret!Key!Production!$(date +%s)
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=https://ss.gonxt.tech
ALLOWED_ORIGINS=https://ss.gonxt.tech,https://www.ss.gonxt.tech

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/letsencrypt/live/ss.gonxt.tech/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/ss.gonxt.tech/privkey.pem

# File Upload Configuration
UPLOAD_DIR=/home/ubuntu/SalesSync/backend-api/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=/home/ubuntu/SalesSync/logs
ERROR_LOG_FILE=/home/ubuntu/SalesSync/logs/error.log
ACCESS_LOG_FILE=/home/ubuntu/SalesSync/logs/access.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Session Configuration
SESSION_SECRET=SalesSync2024!Session!Secret!Production!$(date +%s)
SESSION_TIMEOUT=3600000

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@gonxt.tech
SMTP_PASS=your_email_password_here

# Monitoring Configuration
ENABLE_MONITORING=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Performance Configuration
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=300
MAX_CONNECTIONS=100

# Security Headers
ENABLE_HELMET=true
ENABLE_HSTS=true
HSTS_MAX_AGE=31536000

# API Configuration
API_PREFIX=/api
API_VERSION=v1
MAX_REQUEST_SIZE=50mb

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://ss.gonxt.tech/api
NEXT_PUBLIC_APP_URL=https://ss.gonxt.tech
NEXT_PUBLIC_APP_NAME=SalesSync
NEXT_PUBLIC_VERSION=1.0.0

# Build Configuration
BUILD_OUTPUT_DIR=.next
STATIC_FILES_DIR=public

# Backup Configuration
BACKUP_DIR=/home/ubuntu/backups
BACKUP_RETENTION_DAYS=7
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="SalesSync is currently under maintenance. Please try again later."

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_REAL_TIME_SYNC=true
ENABLE_OFFLINE_MODE=true
ENABLE_PUSH_NOTIFICATIONS=true

# Third-party Integrations
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
FIREBASE_CONFIG=your_firebase_config_here

# Development/Debug (should be false in production)
DEBUG=false
ENABLE_DEBUG_LOGS=false
ENABLE_PROFILING=false