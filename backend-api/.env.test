# Backend Test Environment Configuration

# Environment
NODE_ENV=test

# Server Configuration
PORT=3001
HOST=0.0.0.0

# JWT Authentication
JWT_SECRET=TestSecretKey32CharactersMinimumForTestingOnly!
JWT_REFRESH_SECRET=TestRefreshSecretKey32CharactersMinimumForTesting!
JWT_EXPIRES_IN=86400

# Database Configuration
DATABASE_PATH=./database/salessync_test.db

# CORS Configuration
CORS_ORIGIN=http://localhost:12000

# Logging
LOG_LEVEL=error
LOG_FILE=./logs/test.log

# Rate Limiting (disabled for tests)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10000

# Security
BCRYPT_SALT_ROUNDS=10
SESSION_SECRET=TestSessionSecretKey32CharactersMinimumForTesting!

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./test-uploads

# Multi-Tenant Configuration
DEFAULT_TENANT=DEMO
TENANT_HEADER=X-Tenant-Code

# Performance
MAX_CONNECTIONS=50
QUERY_TIMEOUT=30000

# Debug
DEBUG=false
ENABLE_API_DOCS=true

# SSL Configuration (disabled for tests)
SSL_ENABLED=false

# Test User Credentials (must match database initialization)
TEST_ADMIN_EMAIL=admin@demo.com
TEST_ADMIN_PASSWORD=admin123
TEST_USER_EMAIL=test@salessync.com
TEST_USER_PASSWORD=TestPass123!
TEST_AGENT_EMAIL=agent@test.com
TEST_AGENT_PASSWORD=AgentPass123!
