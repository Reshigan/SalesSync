# SalesSync Backend - Production Environment Configuration
# Copy this file to .env and update with your production values

# Environment
NODE_ENV=production

# Server Configuration
PORT=12001
HOST=0.0.0.0

# JWT Authentication
# IMPORTANT: Generate a secure random key using:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=REPLACE_WITH_SECURE_RANDOM_KEY_MINIMUM_256_BITS

# JWT Token Expiry (in seconds or string format)
JWT_EXPIRES_IN=86400  # 24 hours
# or JWT_EXPIRES_IN=7d  # 7 days

# Database Configuration
DATABASE_PATH=./database/salessync.db

# CORS Configuration
# Set to your frontend domain in production
CORS_ORIGIN=https://yourdomain.com
# For multiple domains, use comma-separated list
# CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=info  # debug, info, warn, error
LOG_FILE=./logs/backend.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100   # Max requests per window

# Security
BCRYPT_SALT_ROUNDS=10
SESSION_SECRET=REPLACE_WITH_SECURE_RANDOM_KEY

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# File Upload (if applicable)
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# Email Configuration (if applicable)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=noreply@yourdomain.com
# SMTP_PASS=your_smtp_password
# EMAIL_FROM=SalesSync <noreply@yourdomain.com>

# Multi-Tenant Configuration
DEFAULT_TENANT=PEPSI_SA
TENANT_HEADER=X-Tenant-Code

# Performance
MAX_CONNECTIONS=100
QUERY_TIMEOUT=30000  # 30 seconds

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM (cron format)
BACKUP_RETENTION_DAYS=30

# Monitoring & Alerts
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# ENABLE_METRICS=true
# METRICS_PORT=9090

# Development/Debug (disable in production)
DEBUG=false
ENABLE_API_DOCS=false
