# SalesSync Backend - Production Simulation Environment
# This configuration simulates a production environment for E2E testing

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=3001
NODE_ENV=production
HOST=0.0.0.0

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_BASE_URL=/api
API_VERSION=v1
FRONTEND_URL=http://localhost:12000

# ============================================================================
# DATABASE CONFIGURATION (Production Simulation)
# ============================================================================
DB_TYPE=sqlite
DB_PATH=./database/salessync_production_test.db
DB_LOGGING=false
DB_SYNC=false

# ============================================================================
# MULTI-TENANT CONFIGURATION
# ============================================================================
DEFAULT_TENANT=DEMO
TENANT_HEADER=X-Tenant-Code
TENANT_ISOLATION=true

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
JWT_SECRET=prod-sim-jwt-secret-key-do-not-use-in-real-production
JWT_EXPIRES_IN=86400
JWT_REFRESH_EXPIRES_IN=604800
BCRYPT_ROUNDS=10
SESSION_SECRET=prod-sim-session-secret-key

# ============================================================================
# RATE LIMITING (Production-like)
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
CORS_ORIGIN=http://localhost:12000
CORS_CREDENTIALS=true

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/csv

# ============================================================================
# EMAIL CONFIGURATION (Simulated)
# ============================================================================
EMAIL_ENABLED=false
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=noreply@salessync.com
EMAIL_FROM=SalesSync <noreply@salessync.com>

# ============================================================================
# SMS CONFIGURATION (Simulated)
# ============================================================================
SMS_ENABLED=false
SMS_PROVIDER=twilio
SMS_FROM=+1234567890

# ============================================================================
# PUSH NOTIFICATIONS (Simulated)
# ============================================================================
PUSH_ENABLED=false
FCM_SERVER_KEY=simulated-fcm-key

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# ============================================================================
# FEATURE FLAGS (Production-like)
# ============================================================================
FEATURE_ANALYTICS=true
FEATURE_MERCHANDISING=true
FEATURE_PROMOTIONS=true
FEATURE_TERRITORIES=true
FEATURE_VAN_SALES=true
FEATURE_OFFLINE_SYNC=true

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================
REQUEST_TIMEOUT=30000
MAX_CONNECTIONS=100
KEEP_ALIVE_TIMEOUT=5000

# ============================================================================
# SECURITY HEADERS
# ============================================================================
SECURITY_HEADERS_ENABLED=true
HELMET_ENABLED=true
CONTENT_SECURITY_POLICY=true

# ============================================================================
# TEST CREDENTIALS (For E2E Testing Only)
# ============================================================================
TEST_ADMIN_EMAIL=admin@demo.com
TEST_ADMIN_PASSWORD=Admin123!Secure
TEST_USER_EMAIL=user@demo.com
TEST_USER_PASSWORD=User123!Secure
TEST_SALES_REP_EMAIL=salesrep@demo.com
TEST_SALES_REP_PASSWORD=Sales123!Secure

# ============================================================================
# MONITORING & METRICS (Simulated)
# ============================================================================
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
PERFORMANCE_MONITORING=true

# ============================================================================
# BACKUP CONFIGURATION (Simulated)
# ============================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ============================================================================
# INTEGRATION SETTINGS (Simulated)
# ============================================================================
ERP_INTEGRATION=false
PAYMENT_GATEWAY=false
SHIPPING_INTEGRATION=false

# ============================================================================
# PRODUCTION SIMULATION FLAGS
# ============================================================================
SIMULATE_PRODUCTION=true
PRODUCTION_MODE=test
ENVIRONMENT=production-simulation
