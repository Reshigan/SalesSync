
# SalesSync Backend - Production Environment Configuration
# AWS T4G.Large Deployment for ss.gonxt.tech

# Environment
NODE_ENV=production

# Server Configuration
PORT=443
HOST=0.0.0.0

# JWT Authentication
# IMPORTANT: Generate a secure random key using:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=SalesSync2024ProductionSecretKey32CharactersMinimum!Secure
JWT_REFRESH_SECRET=SalesSync2024ProductionRefreshSecretKey32CharsMin!Secure

# JWT Token Expiry (in seconds or string format)
JWT_EXPIRES_IN=86400  # 24 hours

# Database Configuration
DATABASE_PATH=./database/salessync_production.db

# CORS Configuration
# Set to your frontend domain in production
CORS_ORIGIN=https://ss.gonxt.tech

# Logging
LOG_LEVEL=info  # debug, info, warn, error
LOG_FILE=./logs/backend.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100   # Max requests per window

# Security
BCRYPT_SALT_ROUNDS=10
SESSION_SECRET=SalesSync2024SessionSecretKey32CharactersMinimum!Secure

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# File Upload (if applicable)
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# Multi-Tenant Configuration
DEFAULT_TENANT=DEMO
TENANT_HEADER=X-Tenant-Code

# Performance
MAX_CONNECTIONS=100
QUERY_TIMEOUT=30000  # 30 seconds

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM (cron format)
BACKUP_RETENTION_DAYS=30

# Monitoring & Alerts
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# ENABLE_METRICS=true
# METRICS_PORT=9090

# Development/Debug (disable in production)
DEBUG=false
ENABLE_API_DOCS=false

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/letsencrypt/live/ss.gonxt.tech/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/ss.gonxt.tech/privkey.pem
