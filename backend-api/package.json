{
  "name": "salessync-backend-api",
  "version": "1.0.0",
  "description": "SalesSync Advanced Field Force Management Backend API",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathIgnorePatterns=\"tests/(e2e|integration|performance|security)\"",
    "test:integration": "jest --testPathPattern=\"tests/integration\"",
    "test:performance": "jest --testPathPattern=\"tests/performance\" --runInBand",
    "test:security": "jest --testPathPattern=\"tests/security\"",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:performance && npm run test:e2e",
    "test:ci": "npm run test:coverage && npm run test:integration && npm run test:e2e",
    "test:production": "NODE_ENV=production npm run test:unit",
    "lint": "echo 'Linting completed - no linter configured'",
    "build": "echo 'Build completed - no build step required'",
    "playwright:install": "playwright install",
    "migrate": "node src/database/migrate.js",
    "seed": "node src/database/seed.js"
  },
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@sendgrid/mail": "^8.1.6",
    "@sentry/node": "^10.24.0",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-slow-down": "^3.0.0",
    "express-winston": "^4.2.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "pg-pool": "^3.6.1",
    "redis": "^4.7.1",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.2",
    "stripe": "^19.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "validator": "^13.15.15",
    "winston": "^3.11.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/jest": "^29.5.8",
    "cypress": "^14.5.4",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "playwright": "^1.56.0",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "field-force",
    "van-sales",
    "multi-tenant",
    "saas",
    "inventory",
    "commission"
  ],
  "author": "SalesSync Team",
  "license": "MIT"
}
