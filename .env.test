# Frontend Configuration (PRODUCTION - NO HARDCODING)
NEXT_PUBLIC_APP_URL=https://ss.gonxt.tech
NEXT_PUBLIC_API_URL=https://ss.gonxt.tech/api

# Environment
NODE_ENV=test

# Multi-Tenant
NEXT_PUBLIC_TENANT_CODE=DEMO

# Features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
