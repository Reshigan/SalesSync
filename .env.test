# SalesSync Test Environment Configuration
# Used for running automated E2E tests in simulated production environment

# Environment
NODE_ENV=test

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_APP_URL=http://localhost:12000
NEXT_PUBLIC_TENANT_CODE=TEST

# Backend Configuration
BACKEND_PORT=3001
BACKEND_HOST=0.0.0.0

# Frontend Port
FRONTEND_PORT=12000
FRONTEND_HOST=0.0.0.0

# Test Configuration
TEST_TIMEOUT=30000
TEST_DATABASE_PATH=./database/salessync_test.db
TEST_USER_EMAIL=test@salessync.com
TEST_USER_PASSWORD=TestPass123!
TEST_ADMIN_EMAIL=admin@test.com
TEST_ADMIN_PASSWORD=AdminPass123!
TEST_AGENT_EMAIL=agent@test.com
TEST_AGENT_PASSWORD=AgentPass123!

# JWT Configuration
JWT_SECRET=TestSecretKey32CharactersMinimumForTestingOnly!
JWT_REFRESH_SECRET=TestRefreshSecretKey32CharactersMinimumForTesting!
JWT_EXPIRES_IN=86400

# Database
DATABASE_PATH=./database/salessync_test.db

# CORS
CORS_ORIGIN=http://localhost:12000

# Logging
LOG_LEVEL=error
LOG_FILE=./logs/test.log

# Rate Limiting (more lenient for tests)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Security
BCRYPT_SALT_ROUNDS=10
SESSION_SECRET=TestSessionSecretKey32CharactersMinimumForTesting!

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./test-uploads

# Multi-Tenant
DEFAULT_TENANT=TEST
TENANT_HEADER=X-Tenant-Code

# Performance
MAX_CONNECTIONS=50
QUERY_TIMEOUT=30000

# Features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PWA=false

# Debug
DEBUG=false
ENABLE_API_DOCS=true

# Playwright Configuration
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_SLOWMO=0
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_BASE_URL=http://localhost:12000
PLAYWRIGHT_API_URL=http://localhost:3001/api
