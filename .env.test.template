# ============================================
# SALESSYNC TEST ENVIRONMENT CONFIGURATION
# ============================================
# This template can be copied and configured for different test environments
# Usage: cp .env.test.template .env.test.local
#        Edit .env.test.local with your environment-specific values

# ============================================
# FRONTEND CONFIGURATION
# ============================================

# Application URLs (NO HARDCODING - MUST BE SET)
NEXT_PUBLIC_APP_URL=${NEXT_PUBLIC_APP_URL:-http://localhost:12000}
NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL:-http://localhost:3001/api}

# Environment
NODE_ENV=test

# Multi-Tenant Configuration
NEXT_PUBLIC_TENANT_CODE=${NEXT_PUBLIC_TENANT_CODE:-DEMO}

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=${NEXT_PUBLIC_ENABLE_ANALYTICS:-false}
NEXT_PUBLIC_ENABLE_PWA=${NEXT_PUBLIC_ENABLE_PWA:-false}

# Third-party Services (disabled for tests)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=${NEXT_PUBLIC_GOOGLE_MAPS_API_KEY:-}
NEXT_PUBLIC_SENTRY_DSN=${NEXT_PUBLIC_SENTRY_DSN:-}

# Build Configuration
NEXT_TELEMETRY_DISABLED=1

# ============================================
# BACKEND CONFIGURATION
# ============================================

# Server Configuration
BACKEND_PORT=${BACKEND_PORT:-3001}
BACKEND_HOST=${BACKEND_HOST:-0.0.0.0}

# JWT Authentication
JWT_SECRET=${JWT_SECRET:-TestSecretKey32CharactersMinimumForTestingOnly!}
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET:-TestRefreshSecretKey32CharactersMinimumForTesting!}
JWT_EXPIRES_IN=${JWT_EXPIRES_IN:-86400}

# Database Configuration (uses SQLite for tests)
DATABASE_PATH=${DATABASE_PATH:-./database/salessync_test.db}

# CORS Configuration
CORS_ORIGIN=${CORS_ORIGIN:-http://localhost:12000}

# Logging
LOG_LEVEL=${LOG_LEVEL:-error}
LOG_FILE=${LOG_FILE:-./logs/test.log}

# Rate Limiting (relaxed for tests)
RATE_LIMIT_WINDOW_MS=${RATE_LIMIT_WINDOW_MS:-900000}
RATE_LIMIT_MAX_REQUESTS=${RATE_LIMIT_MAX_REQUESTS:-10000}

# Security
BCRYPT_SALT_ROUNDS=${BCRYPT_SALT_ROUNDS:-10}
SESSION_SECRET=${SESSION_SECRET:-TestSessionSecretKey32CharactersMinimumForTesting!}

# API Configuration
API_VERSION=${API_VERSION:-v1}
API_PREFIX=${API_PREFIX:-/api}

# File Upload
MAX_FILE_SIZE=${MAX_FILE_SIZE:-10485760}
UPLOAD_DIR=${UPLOAD_DIR:-./test-uploads}

# Multi-Tenant Backend Configuration
DEFAULT_TENANT=${DEFAULT_TENANT:-DEMO}
TENANT_HEADER=${TENANT_HEADER:-X-Tenant-Code}

# Performance
MAX_CONNECTIONS=${MAX_CONNECTIONS:-50}
QUERY_TIMEOUT=${QUERY_TIMEOUT:-30000}

# Debug
DEBUG=${DEBUG:-false}
ENABLE_API_DOCS=${ENABLE_API_DOCS:-true}

# SSL Configuration
SSL_ENABLED=${SSL_ENABLED:-false}

# ============================================
# TEST CONFIGURATION
# ============================================

# Playwright Configuration
PW_TEST_PRODUCTION=${PW_TEST_PRODUCTION:-false}
PW_TEST_BROWSERS=${PW_TEST_BROWSERS:-chromium,webkit,firefox}
PW_TEST_HEADLESS=${PW_TEST_HEADLESS:-true}

# Jest Configuration
JEST_COVERAGE=${JEST_COVERAGE:-true}
JEST_VERBOSE=${JEST_VERBOSE:-true}

# Test User Credentials
TEST_ADMIN_EMAIL=${TEST_ADMIN_EMAIL:-admin@demo.com}
TEST_ADMIN_PASSWORD=${TEST_ADMIN_PASSWORD:-admin123}
TEST_USER_EMAIL=${TEST_USER_EMAIL:-test@salessync.com}
TEST_USER_PASSWORD=${TEST_USER_PASSWORD:-TestPass123!}
TEST_AGENT_EMAIL=${TEST_AGENT_EMAIL:-agent@test.com}
TEST_AGENT_PASSWORD=${TEST_AGENT_PASSWORD:-AgentPass123!}

# ============================================
# ENVIRONMENT EXAMPLES
# ============================================

# LOCAL DEVELOPMENT TESTING:
# NEXT_PUBLIC_APP_URL=http://localhost:12000
# NEXT_PUBLIC_API_URL=http://localhost:3001/api
# PW_TEST_PRODUCTION=false

# STAGING ENVIRONMENT TESTING:
# NEXT_PUBLIC_APP_URL=https://staging.salessync.com
# NEXT_PUBLIC_API_URL=https://staging.salessync.com/api
# PW_TEST_PRODUCTION=true

# PRODUCTION ENVIRONMENT TESTING:
# NEXT_PUBLIC_APP_URL=https://ss.gonxt.tech
# NEXT_PUBLIC_API_URL=https://ss.gonxt.tech/api
# PW_TEST_PRODUCTION=true
