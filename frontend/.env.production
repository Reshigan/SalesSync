# SalesSync Frontend - Production Environment
# Production configuration for deployment

# ============================================================================
# API CONFIGURATION
# ============================================================================
NEXT_PUBLIC_API_URL=https://ss.gonxt.tech/api
NEXT_PUBLIC_APP_URL=https://ss.gonxt.tech

# Backend URL for server-side API routes (Next.js API routes)
BACKEND_URL=https://ss.gonxt.tech

# ============================================================================
# ENVIRONMENT
# ============================================================================
NODE_ENV=production
NEXT_PUBLIC_ENV=production

# ============================================================================
# MULTI-TENANT CONFIGURATION
# ============================================================================
NEXT_PUBLIC_TENANT_CODE=DEMO
NEXT_PUBLIC_TENANT_NAME=SalesSync Production
NEXT_PUBLIC_MULTI_TENANT_ENABLED=true

# ============================================================================
# FEATURE FLAGS (Production-like)
# ============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_GEOLOCATION=true
NEXT_PUBLIC_ENABLE_BARCODE_SCANNER=true

# ============================================================================
# AUTHENTICATION
# ============================================================================
NEXT_PUBLIC_SESSION_TIMEOUT=3600000
NEXT_PUBLIC_REFRESH_TOKEN_ENABLED=true
NEXT_PUBLIC_AUTO_LOGOUT=true

# ============================================================================
# UI/UX CONFIGURATION
# ============================================================================
NEXT_PUBLIC_THEME=light
NEXT_PUBLIC_LANGUAGE=en
NEXT_PUBLIC_TIMEZONE=UTC
NEXT_PUBLIC_DATE_FORMAT=YYYY-MM-DD
NEXT_PUBLIC_TIME_FORMAT=HH:mm:ss

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================
NEXT_PUBLIC_PAGE_SIZE=20
NEXT_PUBLIC_MAX_PAGE_SIZE=100
NEXT_PUBLIC_CACHE_ENABLED=true
NEXT_PUBLIC_CACHE_TTL=300000

# ============================================================================
# MAP & LOCATION SERVICES (Simulated)
# ============================================================================
NEXT_PUBLIC_MAPS_PROVIDER=google
NEXT_PUBLIC_MAPS_API_KEY=simulated-maps-api-key
NEXT_PUBLIC_DEFAULT_LAT=0
NEXT_PUBLIC_DEFAULT_LNG=0
NEXT_PUBLIC_DEFAULT_ZOOM=10

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/*,application/pdf,text/csv
NEXT_PUBLIC_MAX_FILES=10

# ============================================================================
# NOTIFICATION SETTINGS
# ============================================================================
NEXT_PUBLIC_NOTIFICATION_SOUND=true
NEXT_PUBLIC_NOTIFICATION_VIBRATE=true
NEXT_PUBLIC_NOTIFICATION_BADGE=true

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
NEXT_PUBLIC_ENABLE_2FA=false
NEXT_PUBLIC_PASSWORD_MIN_LENGTH=8
NEXT_PUBLIC_PASSWORD_REQUIRE_SPECIAL=true
NEXT_PUBLIC_SESSION_STORAGE=localStorage

# ============================================================================
# MONITORING & ANALYTICS (Simulated)
# ============================================================================
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_HOTJAR_ID=

# ============================================================================
# API CONFIGURATION
# ============================================================================
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3
NEXT_PUBLIC_API_RETRY_DELAY=1000

# ============================================================================
# OFFLINE SYNC CONFIGURATION
# ============================================================================
NEXT_PUBLIC_OFFLINE_STORAGE=indexedDB
NEXT_PUBLIC_SYNC_INTERVAL=300000
NEXT_PUBLIC_MAX_OFFLINE_DAYS=7

# ============================================================================
# BRANDING
# ============================================================================
NEXT_PUBLIC_APP_NAME=SalesSync
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_COMPANY_NAME=SalesSync
NEXT_PUBLIC_SUPPORT_EMAIL=support@salessync.com
NEXT_PUBLIC_SUPPORT_PHONE=+1-555-0123

# ============================================================================
# TEST CREDENTIALS (For E2E Testing Only)
# ============================================================================
TEST_USER_EMAIL=admin@demo.com
TEST_USER_PASSWORD=Admin123!Secure
TEST_SALES_REP_EMAIL=salesrep@demo.com
TEST_SALES_REP_PASSWORD=Sales123!Secure

# ============================================================================
# PRODUCTION FLAGS
# ============================================================================
NEXT_PUBLIC_SIMULATE_PRODUCTION=false
NEXT_PUBLIC_PRODUCTION_MODE=production
