# SalesSync Frontend - Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Backend API URL
# This should point to your production backend API
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# Application URL
# This is the public URL of your frontend application
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Application Name
NEXT_PUBLIC_APP_NAME=SalesSync

# Environment
NEXT_PUBLIC_ENV=production

# API Configuration
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_API_TIMEOUT=30000  # 30 seconds

# Authentication
NEXT_PUBLIC_TOKEN_KEY=salessync_token
NEXT_PUBLIC_SESSION_TIMEOUT=86400000  # 24 hours in milliseconds

# Multi-Tenant Configuration
NEXT_PUBLIC_TENANT_HEADER=X-Tenant-Code
NEXT_PUBLIC_DEFAULT_TENANT=PEPSI_SA

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false

# Google Maps API (if applicable)
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Analytics (if applicable)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Error Tracking (if applicable)
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Social Media Links (if applicable)
# NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/yourpage
# NEXT_PUBLIC_TWITTER_URL=https://twitter.com/yourhandle
# NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/yourcompany

# Support
NEXT_PUBLIC_SUPPORT_EMAIL=support@yourdomain.com
NEXT_PUBLIC_SUPPORT_PHONE=+27-XX-XXX-XXXX

# Build Configuration
# These are used during build time only
ANALYZE=false  # Set to true to analyze bundle size
